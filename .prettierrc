{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleQuote": true,
  "arrowParens": "always",
  "parser": "typescript",
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
